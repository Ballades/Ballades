<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forestwave.pdc8g1.forestwave" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name="org.puredata.android.service.PdService" />

        <activity
            android:name="org.puredata.android.service.PdPreferences"
            android:label="Pure Data Preferences"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.RunActivity"
            android:label="@string/run_activity_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.AmbianceActivity"
            android:label="@string/ambiance_activity_name"
            android:screenOrientation="portrait"/>

        <service
            android:name=".services.CompositionEngineService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>
</manifest>
